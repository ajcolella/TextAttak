<h1>Create a new Attak</h1>
<form action="/new_attak" method="POST">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input class="form-control required" name="name" placeholder="Attak Name">
    </div>
  </div>
  <div class="col-sm-offset-2 col-sm-10">
    <div class="checkbox">
      <label>
        <input type="checkbox" name="exists" value=""> Attak already exists
      </label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Variant</label>
    <div class="col-sm-10">
      <input class="form-control" name="variant_id" placeholder="Variant Id">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Count</label>
    <div class="col-sm-10">
      <input class="form-control" name="count" placeholder="Number of messages sent">
    </div>
  </div>
  <div class="col-sm-offset-2 col-sm-10">
    <div class="checkbox">
      <label>
        <input type="checkbox" name="ordered" value=""> Ordered
      </label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">URLs</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="urls" rows="4" placeholder="image url"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Texts</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="texts" rows="4" placeholder="text message"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      <input class="form-control" name="password" placeholder="ğŸ˜³">
    </div>
  </div>
  <button class="btn btn-default" type="submit">Create New Attak!</button>
</form>
